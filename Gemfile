source 'https://rubygems.org'

# For ability to serve start server and respond to http requests
gem 'sinatra' 
gem 'thin' # allows to run server
gem 'shotgun' # server starter


gem 'pry' #for debugging
gem 'require_all' #for requiring local files

# for database access and management

gem 'activerecord', '~> 5.2.4', :require => 'active_record' #ORM library
gem 'sinatra-activerecord' #rake commandments for sinatra active record
gem 'rake' #to run rake commandments
gem 'sqlite3' #to manage database using sql, we communicate with sqlite3 using ActiveRecord

